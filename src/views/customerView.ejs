<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="topnav">
      <a href="/">Home</a>
      <a href="/display">Dipsplay User</a>
      <a class="active" href="/v1/api/customer">Dipsplay Customer</a>
    </div>
    <table id="customers">
      <thead>
        <tr>
          <th>Name</th>
          <th>address</th>
          <th>email</th>
          <th>phone</th>
          <th>description</th>
          <th>image</th>
        </tr>
      </thead>

      <tbody>
        <% for(var i=0; i < customer.length; i++) { %>
        <tr>
          <td><%= customer[i].name %></td>
          <td><%= customer[i].address %></td>
          <td><%= customer[i].email %></td>
          <td><%= customer[i].phone %></td>
          <td><%= customer[i].description %></td>
          <td>
            <% if (customer[i].image) { %>
            <img
              src="/images/<%= customer[i].image %>"
              alt=""
              width="100"
              height="100"
            />
            <% } else { %> No Image <% } %>
          </td>
          <td>
            <a href="/v1/api/update-customer/<%= customer[i].id %>">Edit</a>
            <a href="/v1/api/delete-customer/<%= customer[i].id %>">Delete</a>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
